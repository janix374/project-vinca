{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-use-before-define": "off",
        "no-unused-vars": "warn",
        "react/jsx-filename-extension": [ "warn", {"extensions": [".js", ".jsx"]} ],
        "react/prop-types": 0,
        "prettier/prettier": [
            "error",
            {
              "printWidth": 80,
              "trailingComma": "es5",
              "semi": true,
              "jsxSingleQuote": true,
              "singleQuote": true,
              "useTabs": true,
              "endOfLine": "auto"
            }
          ]
    }
}
